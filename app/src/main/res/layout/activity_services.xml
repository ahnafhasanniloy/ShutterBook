<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#033445">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:background="@drawable/rounded_red_top"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/welcomeTextView"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="Hi,"
                    android:textColor="#77C9E7"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/usernameTextView"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textColor="#77C9E7"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/categoryRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/weddingCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <FrameLayout
                        android:layout_width="190dp"
                        android:layout_height="190dp">

                        <ImageView
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:contentDescription="Wedding"
                            android:scaleType="centerCrop"
                            android:src="@drawable/wedding" />

                        <TextView
                            android:layout_width="133dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="#AA000000"
                            android:gravity="center"
                            android:padding="6dp"
                            android:text="Wedding"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/birthdayCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <FrameLayout
                        android:layout_width="190dp"
                        android:layout_height="190dp">

                        <ImageView
                            android:layout_width="109dp"
                            android:layout_height="127dp"
                            android:contentDescription="Birthday"
                            android:scaleType="centerCrop"
                            android:src="@drawable/birthday" />

                        <TextView
                            android:layout_width="114dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="#AA000000"
                            android:gravity="center"
                            android:padding="6dp"
                            android:text="Birthday"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/categoryRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/outdoorCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <FrameLayout
                        android:layout_width="190dp"
                        android:layout_height="190dp">

                        <ImageView
                            android:layout_width="133dp"
                            android:layout_height="130dp"
                            android:contentDescription="Outdoor"
                            android:scaleType="centerCrop"
                            android:src="@drawable/outdoor" />

                        <TextView
                            android:layout_width="133dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="#AA000000"
                            android:gravity="center"
                            android:padding="6dp"
                            android:text="Outdoor"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/eventCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <FrameLayout
                        android:layout_width="190dp"
                        android:layout_height="190dp">

                        <ImageView
                            android:layout_width="124dp"
                            android:layout_height="131dp"
                            android:contentDescription="Event"
                            android:scaleType="centerCrop"
                            android:src="@drawable/event" />

                        <TextView
                            android:layout_width="139dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="#AA000000"
                            android:gravity="center"
                            android:padding="6dp"
                            android:text="Event"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/popularPhotographersTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:background="#DCF1FA"
                android:elevation="4dp"
                android:gravity="center"
                android:padding="12dp"
                android:text="Popular Photographers:"
                android:textColor="#77C9E7"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popularPhotographersRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#1A6E8C"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>